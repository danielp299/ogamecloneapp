@inherits LayoutComponentBase
@inject myapp.Services.ResourceService ResourceService
@implements IDisposable

<style>
    .top-menu {
        background-color: #333;
        padding: 10px;
        display: flex;
        justify-content: space-around;
    }

    .resource {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 10px;
    }

    .resource label {
        margin-bottom: 5px;
    }

    .resource-value {
        font-weight: bold;
    }
    body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            background-color: #111;
            color: #eee;
        }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-menu">
            <div class="resource">
                <label>Metal</label>
                <span class="resource-value">@ResourceService.Metal.ToString("N0")</span>
            </div>
            <div class="resource">
                <label>Crystal</label>
                <span class="resource-value">@ResourceService.Crystal.ToString("N0")</span>
            </div>
            <div class="resource">
                <label>Deuterium</label>
                <span class="resource-value">@ResourceService.Deuterium.ToString("N0")</span>
            </div>
            <div class="resource">
                <label>Energy</label>
                <span class="resource-value">@ResourceService.Energy.ToString("N0")</span>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>

        <div style="position: fixed; bottom: 0; right: 0; padding: 5px; color: #555; font-size: 0.8em; background-color: rgba(0,0,0,0.5);">
            Build: @BuildDate
        </div>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">ðŸ—™</a>
</div>

@code {
    private string BuildDate = DateTime.Now.ToString("yyyy-MM-dd HH:mm:ss");

    protected override void OnInitialized()
    {
        ResourceService.OnChange += StateHasChanged;
    }

    public void Dispose()
    {
        ResourceService.OnChange -= StateHasChanged;
    }
}