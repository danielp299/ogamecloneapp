@inherits LayoutComponentBase

<style>
    .top-menu {
        background-color: #333;
        padding: 10px;
        display: flex;
        justify-content: space-around;
    }

    .resource {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 10px;
    }

    .resource label {
        margin-bottom: 5px;
    }

    .resource-value {
        font-weight: bold;
    }
    body {
            font-family: sans-serif;
            margin: 0;
            padding: 0;
            background-color: #111;
            color: #eee;
        }
</style>

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-menu">
            <div class="resource">
                <label>Metal</label>
                <span class="resource-value">10000</span>
            </div>
            <div class="resource">
                <label>Crystal</label>
                <span class="resource-value">5000</span>
            </div>
            <div class="resource">
                <label>Deuterium</label>
                <span class="resource-value">2000</span>
            </div>
            <div class="resource">
                <label>Energy</label>
                <span class="resource-value">0</span>
            </div>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>