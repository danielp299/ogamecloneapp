@page "/buildings"
@using Microsoft.AspNetCore.Components
@using myapp.Services
@inject NavigationManager Navigation
@inject ResourceService ResourceService
@inject BuildingService BuildingService
@inject RequirementService RequirementService
@implements IDisposable

<div class="ogame-banner" style="background-image: url('buildings-banner.jpg');">
    <h2>Buildings</h2>
</div>
@if(BuildingService.ConstructionQueue.Count > 0) {
    @* Construction queue *@
    <div class="ogame-queue-container" id="construction-queue">
        <h3>Construction Queue</h3>
        @foreach (var item in BuildingService.ConstructionQueue)
        {
            <div class="ogame-queue-item">
                <strong>@item.Title</strong>
                <span>Duration: @item.ConstructionDuration.ToString(@"hh\:mm\:ss")</span>
                @if (item.IsBuilding) {
                   <span>Time remaining: @item.TimeRemaining.ToString(@"hh\:mm\:ss")</span>
                }
            </div>
            }
        </div>
}
<div class="ogame-grid" id="buildings-grid">
    @foreach (var building in BuildingService.Buildings)
    {
        <div class="ogame-card">
              <div class="ogame-count-badge">Level: @building.Level</div>

            <img src="@building.Image" alt="@building.Title" />
            <h3>@building.Title</h3>
            <p>@building.Description</p>            
            
            <div class="ogame-cost-section">
                <div class="ogame-cost-item d-flex align-items-center">
                     <img src="metal-icon.png" alt="Metal" style="width:20px;height:20px;margin-right:5px;" /> Metal: @building.MetalCost</div>
                <div class="ogame-cost-item d-flex align-items-center">
                    <img src="crystal-icon.png" alt="Crystal" style="width:20px;height:20px;margin-right:5px;" /> Crystal: @building.CrystalCost</div>
                <div class="ogame-cost-item d-flex align-items-center">
                    <img src="deuterium-icon.png" alt="Deuterium" style="width:20px;height:20px;margin-right:5px;" /> Deuterium: @building.DeuteriumCost
                </div>

                <p>Duration: @building.Duration.ToString(@"hh\:mm\:ss")</p>
                <p>Energy Consumption: @building.EnergyConsumption</p>
            </div>
            
            @if (!BuildingService.ConstructionQueue.Contains(building))
            {
                 // Convert List<string> to Dictionary for compatibility
                 var requirements = new Dictionary<string, int>();
                 if(building.Dependencies != null) 
                 {
                     foreach(var dep in building.Dependencies) requirements.Add(dep, 1);
                 }

                 @if (RequirementService.IsUnlocked(requirements))
                 {
                     @if (building.Level < 1)
                     {
                         <button class="btn btn-primary" id="construct-building-@building.Id" @onclick="() => BuildingService.AddToQueue(building)">Construct</button>
                     }
                     else
                     {
                         <button class="btn btn-primary" id="upgrade-building-@building.Id" @onclick="() => BuildingService.AddToQueue(building)">Upgrade</button>
                     }
                 }
                 else
                 {
                     <div style="color: #ff6666; font-size: 0.8em; margin-bottom: 5px;">Locked</div>
                 }
            } else {
                 if(building.IsBuilding){
                    <p>Time remaining: @building.TimeRemaining.ToString(@"hh\:mm\:ss")</p>
                    <button class="btn btn-secondary" @onclick="() => BuildingService.Cancel(building)">Cancel</button>
                }
            }
        </div>
    }
</div>  




@code{
    protected override void OnInitialized()
    {
        ResourceService.OnChange += RefreshState;
        BuildingService.OnChange += RefreshState;
        BuildingService.UpdateProduction();
    }

    private async void RefreshState()
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ResourceService.OnChange -= RefreshState;
        BuildingService.OnChange -= RefreshState;
    }
}
