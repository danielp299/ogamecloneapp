@page "/buildings"
@using Microsoft.AspNetCore.Components
@using myapp.Services
@inject NavigationManager Navigation
@inject ResourceService ResourceService
@inject BuildingService BuildingService
@inject RequirementService RequirementService
@implements IDisposable

<PageTitle>Buildings</PageTitle>

<div class="ogame-container">
    <!-- Banner -->
    <div class="ogame-banner" style="background-image: url('assets/banners/buildings-banner.jpg');">
        <h2>Buildings</h2>
        <p>Construct and upgrade planetary infrastructure</p>
    </div>

    <!-- Construction Queue -->
    @if(BuildingService.ConstructionQueue.Count > 0)
    {
        <div class="ogame-queue-container mb-lg">
            <h3>Construction Queue</h3>
            @foreach (var item in BuildingService.ConstructionQueue)
            {
                <div class="ogame-queue-item">
                    <div>
                        <strong>@item.Title</strong> - Level @(item.Level + 1)
                        <div class="text-muted" style="font-size: 0.9em;">Duration: @item.ConstructionDuration.ToString(@"hh\:mm\:ss")</div>
                    </div>
                    @if (item.IsBuilding)
                    {
                        <span class="ogame-queue-timer">@item.TimeRemaining.ToString(@"hh\:mm\:ss")</span>
                    }
                </div>
            }
        </div>
    }

    <!-- Buildings Grid -->
    <div class="ogame-grid-4">
        @foreach (var building in BuildingService.Buildings)
        {
            <div class="ogame-card">
                <!-- Level Badge -->
                <div class="ogame-badge">Level @building.Level</div>

                <!-- Building Image -->
                <img src="@building.Image" alt="@building.Title" />

                <!-- Building Info -->
                <h3>@building.Title</h3>
                <p class="text-muted">@building.Description</p>

                <!-- Costs -->
                <div class="ogame-cost-section">
                    <div class="ogame-cost-item">
                        <img src="assets/common/metal-icon.png" alt="Metal" />
                        Metal: @building.MetalCost.ToString("N0")
                    </div>
                    <div class="ogame-cost-item">
                        <img src="assets/common/crystal-icon.png" alt="Crystal" />
                        Crystal: @building.CrystalCost.ToString("N0")
                    </div>
                    <div class="ogame-cost-item">
                        <img src="assets/common/deuterium-icon.png" alt="Deuterium" />
                        Deuterium: @building.DeuteriumCost.ToString("N0")
                    </div>
                    <div class="text-muted" style="margin-top: 8px; font-size: 0.85em;">
                        <div>Duration: @building.Duration.ToString(@"hh\:mm\:ss")</div>
                        <div>Energy: @building.EnergyConsumption</div>
                    </div>
                </div>

                <!-- Action Buttons -->
                @if (!BuildingService.ConstructionQueue.Contains(building))
                {
                    // Convert List<string> to Dictionary for compatibility
                    var requirements = new Dictionary<string, int>();
                    if(building.Dependencies != null)
                    {
                        foreach(var dep in building.Dependencies) requirements.Add(dep, 1);
                    }

                    @if (RequirementService.IsUnlocked(requirements))
                    {
                        @if (building.Level < 1)
                        {
                            <button class="ogame-btn ogame-btn-primary ogame-btn-block"
                                    @onclick="() => BuildingService.AddToQueue(building)">
                                Construct
                            </button>
                        }
                        else
                        {
                            <button class="ogame-btn ogame-btn-primary ogame-btn-block"
                                    @onclick="() => BuildingService.AddToQueue(building)">
                                Upgrade to Level @(building.Level + 1)
                            </button>
                        }
                    }
                    else
                    {
                        <button class="ogame-btn ogame-btn-block" disabled>
                            Locked
                        </button>
                    }
                }
                else
                {
                    @if(building.IsBuilding)
                    {
                        <div class="text-center mb-sm">
                            <div class="ogame-queue-timer">@building.TimeRemaining.ToString(@"hh\:mm\:ss")</div>
                        </div>
                        <button class="ogame-btn ogame-btn-danger ogame-btn-block"
                                @onclick="() => BuildingService.Cancel(building)">
                            Cancel
                        </button>
                    }
                }
            </div>
        }
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        ResourceService.OnChange += RefreshState;
        BuildingService.OnChange += RefreshState;
        BuildingService.UpdateProduction();
    }

    private async void RefreshState()
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        ResourceService.OnChange -= RefreshState;
        BuildingService.OnChange -= RefreshState;
    }
}
