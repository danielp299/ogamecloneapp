@page "/"

<style>
    body {
        font-family: sans-serif;
        margin: 0;
        padding: 0;
        background-color: #111;
        color: #eee;
    }

    .top-menu {
        background-color: #333;
        padding: 10px;
        display: flex;
        justify-content: space-around;
    }

    .resource {
        display: flex;
        flex-direction: column;
        align-items: center;
        margin: 0 10px;
    }

    .resource label {
        margin-bottom: 5px;
    }

    .resource-value {
        font-weight: bold;
    }

    .banner {
        background-color: #222;
        padding: 50px;
        text-align: center;
        margin: 20px;
    }

    .main-content {
        display: flex;
        margin: 20px;
    }

    .sidebar {
        background-color: #222;
        width: 200px;
        padding: 20px;
        margin-right: 20px;
    }

    .sidebar-menu {
        list-style: none;
        padding: 0;
    }

    .sidebar-menu li {
        margin-bottom: 10px;
        cursor: pointer;
    }

    .planet-info {
        background-image: url('planet.jpg'); /* You might need to adjust the path to the image */
        background-size: cover;
        background-position: center;
        padding: 20px;
        flex-grow: 1;
        border: 1px solid #555;
        border-radius: 10px;
    }

    .planet-info-section {
        background-color: rgba(0, 0, 0, 0.7);
        padding: 10px;
        margin-bottom: 10px;
        border-radius: 5px;
    }

    .construction-queue {
        display: grid;
        grid-template-columns: repeat(5, 1fr);
        gap: 10px;
        margin-top: 20px;
    }

    .queue-item {
        background-color: #333;
        padding: 10px;
        border: 1px solid #555;
        border-radius: 5px;
    }

    .other-planets {
        display: grid;
        grid-template-columns: repeat(4, 1fr);
        grid-template-rows: repeat(2, 1fr);
        gap: 20px;
        margin-top: 20px;
    }

    .planet-card {
        background-color: #333;
        padding: 20px;
        border: 1px solid #555;
        border-radius: 5px;
        text-align: center;
    }
</style>

<div class="banner">
    <h2>Ogame Banner</h2>
</div>

<div class="main-content">
    <div class="center-content">
        <div class="planet-info">
            <div class="planet-info-section">
                <h3>Planet Name</h3>
                <p>Size: 100</p>
                <p>Temperature: 20°C</p>
                <p>Construction Fields: 15</p>
            </div>

        </div>

        <div class="construction-queue">
            <div class="queue-item">
                <p>Task Name: Building 1</p>
                <p>Remaining Time: 00:01:00</p>
            </div>
            <div class="queue-item">
                <p>Task Name: Research 1</p>
                <p>Remaining Time: 00:05:00</p>
            </div>
            <div class="queue-item">
                <p>Task Name: Fleet</p>
                <p>Remaining Time: 00:00:30</p>
            </div>
            <div class="queue-item">
                <p>Task Name: Defense</p>
                <p>Remaining Time: 00:03:00</p>
            </div>
            <div class="queue-item">
                <p>Task Name: Building 2</p>
                <p>Remaining Time: 00:08:00</p>
            </div>
        </div>

        <div class="other-planets">
            <div class="planet-card">
                <p>Planet 1</p>
            </div>
            <div class="planet-card">
                <p>Planet 2</p>
            </div>
            <div class="planet-card">
                <p>Planet 3</p>
            </div>
            <div class="planet-card">
                <p>Planet 4</p>
            </div>
            <div class="planet-card">
                <p>Planet 5</p>
            </div>
            <div class="planet-card">
                <p>Planet 6</p>
            </div>
            <div class="planet-card">
                <p>Planet 7</p>
            </div>
            <div class="planet-card">
                <p>Planet 8</p>
            </div>
        </div>
    </div>
</div>

