@page "/factory"
@using myapp.Services
@inject ResourceService ResourceService
@inject FleetService FleetService
@inject BuildingService BuildingService
@inject RequirementService RequirementService
@inject TechnologyService TechnologyService
@implements IDisposable

<div class="ogame-banner" style="background-image: url('buildings-banner.jpg');">
    <h2>Shipyard</h2>
</div>

<!-- Shipyard Queue Display -->
@if (FleetService.ConstructionQueue.Any())
{
    <div class="ogame-queue-container">
        <h3>Current Production</h3>
        @foreach (var item in FleetService.ConstructionQueue)
        {
            <div class="ogame-queue-item">
                <strong>@item.Ship.Name</strong>: @item.Quantity remaining. 
                Next unit in: @item.TimeRemaining.ToString(@"hh\:mm\:ss")
            </div>
        }
    </div>
}

<div class="ogame-grid">
    @foreach (var ship in FleetService.ShipDefinitions)
    {
        // Local view model to track input
        var vm = GetViewModel(ship.Id);
        
        <div class="ogame-card">
            <div class="ogame-count-badge">Hangar: @FleetService.GetShipCount(ship.Id)</div>
            <img src="@ship.Image" alt="@ship.Name" />
            <h3>@ship.Name</h3>
            <p>@ship.Description</p>
            
            <div class="ogame-cost-section">
                <div class="ogame-cost-item">Metal: @ship.MetalCost.ToString("N0")</div>
                <div class="ogame-cost-item">Crystal: @ship.CrystalCost.ToString("N0")</div>
                @if(ship.DeuteriumCost > 0) { <div class="ogame-cost-item">Deuterium: @ship.DeuteriumCost.ToString("N0")</div> }
                <div class="ogame-cost-item">Structure: @ship.Structure.ToString("N0")</div>
                <div class="ogame-cost-item">Base Time: @ship.BaseDuration.ToString()</div>

                @if (ship.Requirements != null && ship.Requirements.Any())
                {
                    <div class="ogame-requirements-section">
                        <strong>Requirements:</strong>
                        <ul style="list-style-type: none; padding-left: 0; margin: 5px 0;">
                            @foreach (var req in ship.Requirements)
                            {
                                var building = BuildingService.Buildings.FirstOrDefault(b => b.Title == req.Key);
                                var tech = TechnologyService.Technologies.FirstOrDefault(t => t.Title == req.Key);
                                int currentLevel = building?.Level ?? tech?.Level ?? 0;
                                bool met = currentLevel >= req.Value;
                                
                                <li style="color: @(met ? "#00ff00" : "#ff6666")">
                                    @req.Key (Lvl @req.Value) - <span style="font-size:0.8em">Current: @currentLevel</span>
                                </li>
                            }
                        </ul>
                    </div>
                }
            </div>

            <div class="ogame-quantity-selector">
                <button class="ogame-quantity-button" @onclick="() => AddToQuantityToBuild(vm, 10)">10</button>
                <button class="ogame-quantity-button" @onclick="() => AddToQuantityToBuild(vm, 50)">50</button>
                <button class="ogame-quantity-button" @onclick="() => AddToQuantityToBuild(vm, 100)">100</button>
            </div>
            
            <div class="ogame-card-actions">
                <input type="number" class="ogame-input-quantity" @bind="vm.QuantityInput" min="0" max="9999"/>
                
                @if(CanBuild(ship))
                {
                     <button class="btn btn-primary" @onclick="() => BuildShip(ship, vm)">Build</button>
                }
                else
                {
                     
                }
            </div>
         </div>
    }
</div>

@code {
    // Simple ViewModel to hold input state for each ship
    public class ShipViewModel
    {
        public string ShipId { get; set; }
        public int QuantityInput { get; set; } = 0;
    }
    
    private List<ShipViewModel> viewModels = new();

    protected override void OnInitialized()
    {
        FleetService.OnChange += RefreshState;
        ResourceService.OnChange += RefreshState;
        
        foreach(var ship in FleetService.ShipDefinitions)
        {
            viewModels.Add(new ShipViewModel { ShipId = ship.Id });
        }
    }
    
    private async void RefreshState()
    {
        await InvokeAsync(StateHasChanged);
    }

    public void Dispose()
    {
        FleetService.OnChange -= RefreshState;
        ResourceService.OnChange -= RefreshState;
    }
    
    private ShipViewModel GetViewModel(string shipId) => viewModels.First(v => v.ShipId == shipId);

    private void AddToQuantityToBuild(ShipViewModel vm, int amount)
    {
        vm.QuantityInput += amount;
    }

    private void BuildShip(Ship ship, ShipViewModel vm)
    {
        FleetService.AddToQueue(ship, vm.QuantityInput);
        vm.QuantityInput = 0; // Reset after adding
    }
    
    private bool CanBuild(Ship ship)
    {
        return RequirementService.IsUnlocked(ship.Requirements);
    }
}
